{
  "manifest_version": 2,
  "name": "Stockie",
  "description": "Get your favorite stocks tracking handy in one place",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "stockmarket.png",
      "48": "stockmarket.png",
      "128": "stockmarket.png"
    }
  },
  "permissions": ["activeTab"]
}